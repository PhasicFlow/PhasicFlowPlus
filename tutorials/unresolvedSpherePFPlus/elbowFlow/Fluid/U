FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

Uave            15;

dimensions      [ 0 1 -1 0 0 0 0 ];

internalField   uniform (0 0 0); 


boundaryField
{
   
    shell
    {
        type            noSlip;
    }
    
    inlet
    {
        type            fixedValue;
        value           uniform (0 0 $Uave);
    }

    outlet
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0  0);
    }
    
}


